@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div class="container">
        <input type="text" id="username" />
        <input type="password" id="password" />
        <input type="button" id="loginButton" value="login" />
        <input type="hidden" id="displayname" />
        <ul id="discussion"></ul>
    </div>
    <!--Script references. -->
    <!--Reference the jQuery library. -->
    <script src="Scripts/jquery-1.6.4.min.js"></script>
    <!--Reference the SignalR library. -->
    <script src="Scripts/jquery.signalR-2.4.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <!--<script src="http://localhost:49671/signalr/hubs"></script>-->
    <script src="@System.Web.Configuration.WebConfigurationManager.AppSettings["SIGNALR_SERVER"]/signalr/hubs"></script>
    <!--Add script to update the page and send messages.-->
    <script type="text/javascript">
        var RootUri = '@System.Configuration.ConfigurationManager.AppSettings["SIGNALR_SERVER"]';
        $(function () {
            //Set the hubs URL for the connection
            $.connection.hub.url = RootUri + "/signalr";

            // Declare a proxy to reference the hub.
            var conn = $.connection.customHub;

            // Create a function that the hub can call to broadcast messages.
            conn.client.mostrarMensaje = function (name, message) {
                // Html encode display name and message.
                var encodedName = $('<div />').text(name).html();
                var encodedMsg = $('<div />').text(message).html();
                // Add the message to the page.
                $('#discussion').append('<li><strong>' + encodedName
                    + '</strong>:&nbsp;&nbsp;' + encodedMsg + '</li>');
            };

            // Get the user name and store it to prepend to messages.
            //Loguear para recibir mensajes
            $('#loginButton').click(function () {
                // Call the Send method on the hub.
                var usuario = $('#username').val();
                var password = $('#password').val();
                var settings = {
                    "url": RootUri + "/api/login/authenticate",
                    "method": "POST",
                    "type": "POST",
                    "timeout": 0,
                    "headers": {
                        "Content-Type": "application/json"
                    },
                    "data": JSON.stringify({ "Username": usuario, "Password": password }),
                };

                $.ajax(settings).done(function (response) {
                    console.log(response);
                    if (response.respuesta === "OK") {
                        // Start the connection.
                        $.connection.hub.qs = { 'token': response.resultado }
                        $.connection.hub.start().done(function () {
                            conn.client.mostrarMensaje("server", "te has logueado como " + usuario);
                        });
                    }
                });
            });


        });
    </script>
</body>
</html>
